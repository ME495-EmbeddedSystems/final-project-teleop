<launch>
    <arg name="world" default="$(find-pkg-share teleop_tasks)/worlds/Blocks.sdf"/>

    <group>
        <include file="$(find-pkg-share teleop_tasks)/launch/leftHandTest.launch.xml"/>
    </group>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r $(var world)"/>
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic /robot_description -z 2.0"/>

    <node pkg="ros_gz_bridge" exec="parameter_bridge"
        args="/model/left_hand/tf@tf2_msgs/msg/TFMessage[gz.msgs.Pose_V
              /world/Blocks/pose/info@tf2_msgs/msg/TFMessage[gz.msgs.Pose_V
              /world/Blocks/model/LeftHand/joint_state@sensor_msgs/msg/JointState[gz.msgs.Model
              /force_torque@geometry_msgs/msg/WrenchStamped[gz.msgs.Wrench">
        <remap from="/world/Blocks/pose/info" to="/object/poses" />
        <remap from="/force_torque" to="/fingertip/force_torque" />
    </node>

    <node pkg="teleop_tasks" exec="objects" name="objects"/>
</launch>